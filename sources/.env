DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=database
DB_USERNAME=user
DB_PASSWORD=pass

# Dùng Redis cho cache/session/queue
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_CONNECTION=default  # tùy chọn; dùng connection 'default' của Redis
QUEUE_CONNECTION=redis

# Cấu hình Redis
# Chọn client theo môi trường:
# - phpredis: cần PHP extension 'redis'
# - predis: cần composer require predis/predis
REDIS_CLIENT=phpredis

# Nếu chạy Docker, đặt theo service name (ví dụ: 'redis'); nếu local, có thể là 127.0.0.1
REDIS_HOST=web-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Tùy chọn: tách DB cho cache và default
# REDIS_DB=0
# REDIS_CACHE_DB=1

# Tùy chọn: nếu broadcast/websocket dùng Redis
# BROADCAST_DRIVER=redis